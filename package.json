{
  "private": true,
  "packageManager": "pnpm@8.5.0",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "scripts": {
    "dev": "pnpm run -C play dev",
    "docs:dev": "pnpm run -C docs dev",
    "build:rollup": "pnpm run clean:lib && rollup -c",
    "build:script": "pnpm run clean:lib && node ./script/build",
    "build:style": "pnpm run -C packages/styles build",
    "clean:lib": "rimraf lib"
  },
  "dependencies": {
    "@uif-next3/components": "workspace:^",
    "@uif-next3/styles": "workspace:^",
    "vue": "3.3.4"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rimraf": "^5.0.5",
    "rollup": "^2.79.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-glob-import": "^0.5.0",
    "rollup-plugin-vue": "6",
    "stylus": "^0.60.0",
    "vite": "^4.4.11"
  },
  "engines": {
    "node": ">=14.16"
  }
}